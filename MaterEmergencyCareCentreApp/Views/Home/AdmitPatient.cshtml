@model MaterEmergencyCareCentreApp.Domain.Models.PatientDto

@{
    ViewData["Title"] = "Admit Patient";
}

<h1>Admit Patient</h1>

<h4>to Bed #@Model.BedId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form1" method="post" action="/Home/PostAdmission"
              enctype="application/x-www-form-urlencoded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URN" class="control-label"></label>
                <input asp-for="URN" class="form-control" />
                <span asp-validation-for="URN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BedId" class="control-label"></label>
                <input asp-for="BedId" class="form-control" value="@Model.BedId" />
                <span asp-validation-for="BedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresentingIssue" class="control-label"></label>
                <input asp-for="PresentingIssue" class="form-control" />
                <span asp-validation-for="PresentingIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdmitted" class="control-label"></label>
                <input asp-for="DateAdmitted" class="form-control" value="@Model.DateAdmitted" />
                <span asp-validation-for="DateAdmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nurse" class="control-label"></label>
                <input asp-for="Nurse" class="form-control" />
                <span asp-validation-for="Nurse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
