@model MaterEmergencyCareCentreApp.Domain.Models.DischargeDto

@{
    ViewData["Title"] = "Discharge Patient";
}

<h1>Discharge Patient</h1>

<h4>#@Model.PatientId @Model.Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       <form id="form1" method="post" action="/Home/PostDischarge"
              enctype="application/x-www-form-urlencoded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
                <input asp-for="Patient" class="form-control" />
                <span asp-validation-for="Patient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nurse" class="control-label"></label>
                <input asp-for="Nurse" class="form-control" />
                <span asp-validation-for="Nurse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
