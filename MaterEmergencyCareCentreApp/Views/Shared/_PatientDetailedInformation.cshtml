<h2><ul>Patient detailed information</ul></h2>

@foreach (var p in Model.AdmittedPatientsUsingABed)
{
    <text>Name: </text>@p.Name<br />
    <text>URN: </text>@p.URN<br />
    <text>Date of birth: </text>@p.DOB<br />
    <text>Bed: </text>@p.BedId<br />
    <text>Presenting issue: </text>@p.PresentingIssue<br />
    <text>Comments</text><br />
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Nurse</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in p.Comments)
            {
                <tr>
                    <td>@c.CommentTime.ToString("dd-MMM-yyyy")</td>
                    <td>@c.CommentTime.ToString("HH:mm")</td>
                    <td>@c.Nurse</td>
                    <td>@c.Text</td>
                </tr>
            }
        </tbody>
    </table>

}
